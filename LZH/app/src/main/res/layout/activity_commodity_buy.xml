<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.lzh.CommodityBuyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/commodity_buy_viewPager"
                android:layout_width="match_parent"
                android:layout_height="350dp"/>
            <TextView
                android:id="@+id/commodity_buy_text1"
                android:text="乔家栅  小麻球"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/commodity_buy_text2"
                android:text="12.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/commodity_buy_image1"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="乔家栅"
                android:layout_toRightOf="@id/commodity_buy_image1"
                android:id="@+id/commodity_buy_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="乔家栅"
                android:layout_toRightOf="@id/commodity_buy_text3"
                android:id="@+id/commodity_buy_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="乔家栅"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/commodity_buy_image1"
                android:id="@+id/commodity_buy_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
            <TextView
                android:text="猜你喜欢"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/commodity_buy_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
