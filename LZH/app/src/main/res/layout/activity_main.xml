<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.lzh.MainActivity">

    <RadioGroup
        android:padding="@dimen/x4"
        android:layout_alignParentBottom="true"
        android:id="@+id/lzh_main_rg"
        android:background="#0f0e0e"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/lzh_main_album"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="故事"
            android:textColor="#d5d0d0"
            android:drawableTop="@drawable/rb_ablum"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/lzh_main_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="发现"
            android:gravity="center"
            android:textColor="#d5d0d0"

            android:drawableTop="@drawable/rb_search"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/lzh_main_crowdfunding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="定制"
            android:gravity="center"
            android:drawableTop="@drawable/rb_crowdfund"
            android:textColor="#d5d0d0"

            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/lzh_main_brand"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="字号"
            android:textColor="#d5d0d0"

            android:gravity="center"
            android:drawableTop="@drawable/rb_brand"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="#d5d0d0"
            android:id="@+id/lzh_main_personal"
            android:text="我的"
            android:gravity="center"
            android:drawableTop="@drawable/rb_personal"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <FrameLayout
        android:id="@+id/lzh_main_container"
        android:layout_above="@id/lzh_main_rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>
