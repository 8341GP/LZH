<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.acer.lzh.fragment.PersonalFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:background="@mipmap/my_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >
        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/my_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </RelativeLayout>
    <ImageView
        android:background="#DCDCDC"
        android:layout_width="match_parent"
        android:layout_height="8dp" />
    <LinearLayout
        android:padding="19dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="我的订单"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="查看全部"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="right"
            android:drawableRight="@mipmap/youjt"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:background="#DCDCDC"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:padding="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawableTop="@mipmap/my_be_paid"
            android:text="待支付"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:text="已下定"
            android:drawableTop="@mipmap/my_crowdfunding"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableTop="@mipmap/my_be_shipped"
            android:text="待发货"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableTop="@mipmap/my_receipt_of_good"
            android:text="待收货"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ImageView
        android:background="#DCDCDC"
        android:layout_width="match_parent"
        android:layout_height="8dp" />
    <LinearLayout
        android:padding="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawableTop="@mipmap/my_customer"
            android:text="客服"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:text="推荐给好友"
            android:drawableTop="@mipmap/my_recommend_to_a_friend"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableTop="@mipmap/my_address"
            android:text="我的地址"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/personal_like_text"
            android:clickable="true"
            android:drawableTop="@mipmap/my_like"
            android:text="我的收藏"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ImageView
        android:background="#DCDCDC"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:padding="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawableTop="@mipmap/my_message"
            android:text="我的消息"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:text="帮助"
            android:drawableTop="@mipmap/my_help"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableTop="@mipmap/my_suggestion"
            android:text="意见反馈"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView

            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
